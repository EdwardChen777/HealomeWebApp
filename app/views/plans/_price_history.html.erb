
<% unless @prices.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Price History</span>
      <table class="striped highlight">
      <thead>
        <th>Date</th>
        <th class="align_right">Price</th>
      </thead>
        <% for price in @prices %>
          <tr>
            <td><%= link_to price.start_date, plan_prices_path(price) %></td>
            <td class="align_right"><%= number_to_currency(price.price) %></td>
          </tr>
        <% end %>
    </table>
    </div>
      <div class="card-action">
        <%= link_to "Add a New Price", new_plan_price_path(plan_id: @plan.id) %>
      </div>
  </div>
<% else %>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a New Price", new_plan_price_path(plan_id: @plan.id) %>
      </div>
    </div>
<% end %>