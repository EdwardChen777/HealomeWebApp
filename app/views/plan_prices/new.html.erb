<div class="row">
  <div class="col s8">
    <h4>New price for <%= @plan.name %></h4>
    <%= simple_form_for(@plan_price) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <p>&nbsp;&nbsp;&nbsp;Current price: <%= number_to_currency(@plan.current_retail_price) %></p>
        <p><h6><em>&nbsp;&nbsp;&nbsp;Enter new price</em></h6></p>
        <div class="form-inputs">
          <%= f.input :plan_id, as: :hidden, input_html: { value: @plan.id } %>
          <%= f.input :price, label_html: { class: 'active' } %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>